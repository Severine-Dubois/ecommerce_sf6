{% extends 'base.html.twig' %}

{% block title %}| Réinitialiser le mot de passe
{% endblock %}

{% block body %}
	<section class="flex justify-center m-8">
		<div class="grow p-4 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 lg:p-8 dark:bg-gray-800 dark:border-gray-700">
			<h1 class="mb-4 text-xl font-medium text-gray-900 dark:text-white">Réinitialiser le mot de passe</h1>
			{{ form_start(resetPassForm) }}
			{{ form_row(resetPassForm.password) }}
			<button type="submit" class="mt-4 w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Réinitialiser</button>
			{{ form_end(resetPassForm) }}
		</div>
	</section>
{% endblock %}
