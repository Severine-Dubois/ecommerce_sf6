{% extends 'base.html.twig' %}

{% block title %}| Inscription{% endblock %}

{% block body %}

<section class="flex justify-center m-8">
<div class="grow p-4 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md sm:p-6 lg:p-8 dark:bg-gray-800 dark:border-gray-700">
    <h1 class="text-xl font-medium text-gray-900 dark:text-white">S'inscrire</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.RGPDConsent) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}

</div>
</section>

{% endblock %}
